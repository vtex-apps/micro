{
  "compilerOptions": {
    "typeRoots": [
      "./framework/typings",
      "./plugins/typings",
      "./router/typings"
    ],
    "target": "es2019",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["index.ts", "framework", "plugins", "router"],
  "exclude": ["dist", "pages"]
}
