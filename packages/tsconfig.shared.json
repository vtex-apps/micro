{
  "compilerOptions": {
    "typeRoots": [
      "utils/typings",
      "plugins/typings"
    ],
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["index.ts", "utils", "plugins"],
  "exclude": ["dist", "components", "pages"]
}
