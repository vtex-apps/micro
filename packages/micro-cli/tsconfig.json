{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "target": "es2019",                      
    "module": "commonjs",                    
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src"
  ]
}
